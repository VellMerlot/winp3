<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.0.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-3.2.xsd">



	<security:http auto-config="true" use-expressions="true">
		<!--<intercept-url pattern="/admin**" access="ROLE_USER" />-->
		<security:intercept-url pattern="/web/admin/**" access="hasRole('GlobalAdmin')" />
		<!--<security:intercept-url pattern="/web/*" access="isAuthenticated()"/> -->
			
		<!-- access denied page -->
		<security:access-denied-handler error-page="/web/403" />
		
		<security:form-login
			login-processing-url="/web/j_spring_security_check"
		    login-page="/web/login" 
		    default-target-url="/web/welcome" 
			authentication-failure-url="/web/login?error" 
			username-parameter="username"
			password-parameter="password" />
		<security:logout logout-url="/web/j_spring_security_logout" logout-success-url="/web/login?logout" delete-cookies="JSESSIONID"/>
		
		<!-- enable csrf protection -->
		<security:csrf />
	</security:http>
	 
 	<bean id="dbUtil" class="es.limolike.winp3MVC.util.DbUtil" init-method="initialize">
		<property name="dataSource" ref="dataSource" />
	</bean>

	
	<!-- Select users and user_roles from database -->
	<security:authentication-manager>
	  <security:authentication-provider>
	  	<security:password-encoder hash="md5"/>
		<security:jdbc-user-service data-source-ref="dataSource"
		  users-by-username-query="select sso_id as username, password, '1' as enabled from winp3_sys.app_user where user_name=?"
		  authorities-by-username-query="SELECT sso_id as username, p.type as role FROM winp3_sys.app_user u, winp3_sys.app_user_user_profile up , winp3_sys.user_profile p where p.id = up.user_profile_id and u.id = up.user_id and u.sso_id=?" />
	  </security:authentication-provider>
	</security:authentication-manager>

</beans>